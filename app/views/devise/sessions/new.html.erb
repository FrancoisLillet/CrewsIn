<div class="application-box">
  <div class="login-white-section">
    <div class="login-form-container">
      <div class="login-form-logo-container">
        <%= image_tag 'logo_text_black_2x.png', class: "login-form-logo" %>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: "Email",
                label: false,
                input_html: { autocomplete: "email" },
                class: "login-form-email"%>
          <%= f.input :password,
                required: false,
                placeholder: "Password",
                label: false,
                input_html: { autocomplete: "current-password" } %>
          <div class="forgot-remember-container">
            <%= link_to "Forgot your password?", new_registration_path(resource_name), class: "gray login-forgot" %><br />
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
        <div class="form-actions login-button-container ">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <div class="login-links">
        <span class="login-signup">Dont't have an account?<%= link_to " Sign up", new_registration_path(resource_name), class: "gray" %><br />
        </span>
        <%= image_tag 'icon-oauth.svg', class: "login-oauth" %>
      </div>
    </div>
  </div>
</div>
