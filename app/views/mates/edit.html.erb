<div class="page-container">
  <h1 class="text-center">My personal profile</h1>
  <br/>
  <p>These information will be used to fill in the crew list whenever you add yourself
  as participant in a trip.</p>
  <div class="profile-container">
    <%= simple_form_for([@user, @mate], data: {turbo: false}) do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90,
                                  end_year: Date.today.year, discard_day: false,
                                  order: [:year, :month, :day] %>
          <%= f.input :address %>
          <%= f.input :nationality %>
          <%= f.input :country_of_residence, as: :string %>
          <%= f.input :passport_number %>
          <%= f.input :expiration_date %>
        <div class="flex-link-container" style="margin: 32px 0px;">
          <%= link_to "Back", request.referrer, class: "button-back" %>
          <%= f.submit "Submit", class: "button-main space-"%>
        </div>
      <% end %>
  </div>
</div>
