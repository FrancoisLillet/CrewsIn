<div class="page-container">
  <div class="profile-container">
    <% if params[:is_user] == "true" %>
      <h1>My personal information</h1>
      <br/>
      <p>These information will be used to fill in the crew list whenever you add yourself
      participate in a trip</p>
    <% else %>
      <h1><%= "#{@mate.first_name} #{@mate.last_name}'s participant information" %></h1>
      <br/>
      <p>These information will be used to fill in the crew list whenever you add this person as
      a participant to a trip</p>
    <% end %>
    <div class="grid-container">
      <div class="left-column"><p>First name</p></div><div class="right-column"><p><%= @mate.first_name%></p></div>
      <div class="left-column"><p>Last name</p></div class="right-column"><div><p><%= @mate.last_name%></p></div>
      <div class="left-column"><p>Date of birth</p></div class="right-column"><div><p><%= @mate.date_of_birth.strftime("%d %b %Y")%></p></div>
      <div class="left-column"><p>Address</p></div class="right-column"><div><p><%= @mate.address%></p></div>
      <div class="left-column"><p>Phone number</p></div class="right-column"><div><p><%= @mate.phone_number%></p></div>
      <div class="left-column"><p>Nationality</p></div class="right-column"><div><p><%= @mate.nationality%></p></div>
      <div class="left-column"><p>Passport_number</p></div class="right-column"><div><p><%= @mate.passport_number%></p></div>
      <div class="left-column"><p>expiration_date</p></div class="right-column"><div><p><%= @mate.expiration_date.strftime("%d %b %Y")%></p></div>
    </div>
    <div class="flex-button-container">
      <%= link_to "Back", user_mates_path(@user.id), class: "button-back" %>
      <%= link_to "Edit", edit_user_mate_path(@user.id, @mate.id, is_user: @mate.is_user), class: "button-main" %>
    </div>
  </div>
</div>
