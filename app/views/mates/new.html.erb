<% if params[:is_user] == "true" %>
  <h1>Create my personal profile</h1>
  <br/>
  <p>These information will be used to fill in the crew list whenever you add yourself
  participate in a trip</p>
<% else %>
  <h1>Create a Mate</h1>
  <br/>
  <p>These information will be used to fill in the crew list whenever you add this person as
  a participant to a trip</p>
<% end %>


  <%= simple_form_for([@user, @mate], data: {turbo: false}) do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :is_user, as: :hidden, input_html: { value: "#{params[:is_user]}" } %>
      <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year, discard_day: false,
                              order: [:year, :month, :day] %>
      <%= f.input :address %>
      <%= f.input :nationality %>
      <%# We have to check the country of residence field because it has an error.%>
      <%= f.input :country_of_residence, as: :string %>
      <%= f.input :passport_number %>
      <%= f.input :expiration_date %>
      <%= f.submit "Submit", class: "btn btn-success"%>
  <% end %>
